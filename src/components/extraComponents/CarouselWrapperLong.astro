---
import ResponsiveCarouselLong from './ResponsiveCarouselLong.jsx';

const { lang } = Astro.props;

// Importar todos los datos de forma estática
import esData from '../../i18n/lang/es/screen7.json';
import enData from '../../i18n/lang/en/screen7.json';

// Seleccionar los datos según el idioma
const data = lang === 'es' ? esData : enData;

// Extract the carousel data
const lasVentajas = data.ventajas || [];
---

<div class="carousel-container w-full h-full">
  <ResponsiveCarouselLong client:visible slides={lasVentajas} />
</div>

<style is:global>
  /* Estilos adicionales para Swiper */
  .swiper-pagination-bullet {
    background-color: #121212 !important;
    opacity: 0.5;
  }
  
  .swiper-pagination-bullet-active {
    opacity: 1;
  }
</style>