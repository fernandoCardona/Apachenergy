---
import { languages, defaultLang } from '../i18n/config';

// Recibir currentPath y lang como props
const { lang = defaultLang, currentPath = `/${lang}` } = Astro.props;

// Ya no usamos Astro.url
// const url = Astro.url;
---

<div class="language-selector">
  <ul>
    {Object.entries(languages).map(([code, label]) => (
      <li>
        <a 
          href={currentPath.replace(`/${lang}`, `/${code}`)} 
          class={lang === code ? 'active' : ''}
        >
          {label}
        </a>
      </li>
    ))}
  </ul>
</div>

 